{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/main/*", "dist/main/*"]
    }
  },
  "include": ["src/**/*.ts", "src/@types/**/*.d.ts", "__tests__/**/*.ts"]
}
